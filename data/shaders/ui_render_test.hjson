tags: []

options: {}

parameters: {
    sampler_colour: { type: "sampler2D" }
    colour: { type: "vec4", default: [ 1.0, 1.0, 1.0, 1.0 ] }
    opacity: { type: "float", default: 1.0 }
}

fragment_code:
    '''
    void main() {
        vec4 result = texture(sampler_colour, tex_coord).rgba * material_params.colour;
        result.a *= material_params.opacity;
        frag_out = result;
    }
    '''
